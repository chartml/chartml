{
  "name": "chartml-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "ChartML - A declarative markup language for creating beautiful, interactive data visualizations",
  "scripts": {
    "build": "pnpm --filter './packages/*' run build",
    "test": "pnpm --filter './packages/*' run test",
    "docs:dev": "pnpm --filter docs run docs:dev",
    "docs:build": "pnpm --filter docs run docs:build",
    "clean": "pnpm --filter './packages/*' exec rm -rf dist node_modules && rm -rf docs/node_modules docs/.vitepress/dist docs/.vitepress/cache"
  },
  "keywords": [
    "chartml",
    "visualization",
    "charts",
    "data",
    "d3",
    "declarative"
  ],
  "author": "Jason Adams",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chartml/chartml.git"
  },
  "homepage": "https://chartml.org",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "documentation": "^14.0.3",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  }
}
